<h1>(アイドル紹介所)</h1>
<h3>イベント紹介ページ</h3>
<%= form_for @event do |f| %>

  <div class="field">
    <%= f.label :イベント名 %>
    <%= f.text_field :title, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :コメント  %>
    <%= f.text_area :idea, :size => "30x2" %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", events_path %>