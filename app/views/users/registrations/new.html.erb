<div class = "sign_up">
  <div class = "sign_up_box">
    <div class = "title_area">
      <div class = "title">新規登録</div>

    </div>
    <div class = "field_area">


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field_input", :placeholder => "ユーザーネーム" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field_input", :placeholder => "Eメールアドレス" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class: "field_input", :placeholder => "新しいパスワード" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field_input", :placeholder => "新しいパスワード(確認)" %>
    </div>
    </div>

    <div class="submit">
      <div class="actions">
        <%= f.submit "登録",class:"submit_button" %>
      </div>
    </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
